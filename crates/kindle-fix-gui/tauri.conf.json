{
  "$schema": "https://raw.githubusercontent.com/tauri-apps/tauri/dev/crates/tauri-cli/config.schema.json",
  "productName": "Kindle File Fix",
  "version": "0.1.0",
  "identifier": "com.klausdk.kindle-file-fix",
  "build": {
    "frontendDist": "../../gui/dist"
  },
  "app": {
    "windows": [
      {
        "title": "Kindle File Fix",
        "width": 620,
        "height": 520,
        "resizable": true,
        "fullscreen": false
      }
    ],
    "security": {
      "csp": "default-src 'self'; style-src 'self' 'unsafe-inline'"
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": ["icons/icon.ico"]
  },
  "plugins": {
    "dialog": {
      "open": true
    },
    "fs": {
      "scope": {
        "allow": ["**"]
      }
    }
  }
}
